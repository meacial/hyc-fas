<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hyc.fas.mapper.HycUserMapper">

    <resultMap id="hycUserMap" type="HycUser">
        <id column="u_i_id" property="userid" jdbcType="VARCHAR" />
        <result column="phone" property="username"  jdbcType="VARCHAR"/>
        <result column="pass_word" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getByPhone" resultMap="hycUserMap">
        /*SELECT u_i_id,phone FROM user_info WHERE u_i_type='01' AND phone = #{phone}*/
        SELECT u_i_id as userid ,phone as username,pass_word as password FROM user_info WHERE u_i_type='01' AND phone='Iq63w+w1ATP35ycdbXzIyA=='
    </select>

</mapper>